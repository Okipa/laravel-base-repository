{
    "name": "okipa/laravel-base-repository",
    "description": "An abstract base repository with predefined common features.",
    "keywords": [
        "okipa",
        "package",
        "php",
        "laravel",
        "base",
        "repository",
        "pattern"
    ],
    "homepage": "https://github.com/Okipa/laravel-base-repository",
    "license": "MIT",
    "authors": [
        {
            "name": "Arthur LORENT",
            "email": "arthur.lorent@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": "~5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^3.6",
        "squizlabs/php_codesniffer": "^3.3",
        "mockery/mockery": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Okipa\\LaravelBaseRepository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Okipa\\LaravelBaseRepository\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpcs",
            "vendor/bin/phpcbf",
            "phpunit"
        ]
    },
    "minimum-stability": "stable"
}
